<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent"
        tools:context=".settings.EditActivity">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120sp" android:layout_height="120sp"
            android:src="@drawable/contact" android:layout_marginTop="16sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8sp" app:layout_constraintHorizontal_bias="0.93"
            android:id="@+id/selected_image_view"/>
    <Button
            android:text="Выберите изображение"
            android:textSize="15sp"
            android:background="@drawable/rounded_button1"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:color="#66FF0000"
            android:alpha="0.5"
            android:id="@+id/select_image_button"
            app:layout_constraintTop_toTopOf="@+id/selected_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/selected_image_view"
            app:layout_constraintStart_toStartOf="@+id/selected_image_view"
            app:layout_constraintEnd_toEndOf="@+id/selected_image_view"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/enter_name" android:layout_marginEnd="8sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.043" android:layout_marginTop="16sp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="SIP-ID"
            android:ems="10"
            android:id="@+id/enter_id" android:layout_marginEnd="8sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16sp" app:layout_constraintTop_toBottomOf="@+id/enter_name"
            app:layout_constraintHorizontal_bias="0.043"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Domain"
            android:ems="10"
            android:id="@+id/enter_domain" android:layout_marginEnd="8sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16sp" app:layout_constraintTop_toBottomOf="@+id/enter_id"
            app:layout_constraintHorizontal_bias="0.043"/>


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/enter_password" android:layout_marginEnd="8sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.043" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/enter_domain"/>

    <EditText
            android:layout_width="371sp"
            android:layout_height="450sp"
            android:inputType="textMultiLine"
            android:hint="Description"
            android:ems="10"
            android:gravity="start"
            android:id="@+id/enter_description" android:layout_marginEnd="8sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            android:layout_marginTop="16sp" app:layout_constraintTop_toBottomOf="@+id/enter_password"/>
</androidx.constraintlayout.widget.ConstraintLayout>