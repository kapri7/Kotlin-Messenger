<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="5dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/make_call">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call_button"
                android:layout_gravity="center"/>

        <TextView
                android:layout_width="286dp"
                android:layout_height="60sp"
                android:text="  Call                           "
                android:textSize="25sp"
                android:gravity="start|center"
                android:textColor="@android:color/black" android:id="@+id/start_call"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/make_message">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/message_button"
                android:layout_gravity="center"/>

        <TextView
                android:layout_width="286dp"
                android:layout_height="60sp"
                android:text="  Message                  "
                android:textSize="25sp"
                android:gravity="start|center"
                android:textColor="@android:color/black" android:id="@+id/start_message"/>

    </LinearLayout>

</LinearLayout>