<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent"
        tools:context=".contacts.ContactActivity"
        android:weightSum="100" android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120sp"
            android:id="@+id/settings_photo"
            android:layout_height="120sp"
            android:layout_marginTop="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16sp" android:layout_marginBottom="8sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="23sp"
            android:text="Name:"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="243sp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_marginBottom="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/settings_name"
            android:layout_marginStart="8sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8sp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8sp" app:layout_constraintEnd_toStartOf="@+id/settings_photo"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@+id/settings_name"
            android:layout_marginTop="12sp"
            app:layout_constraintTop_toBottomOf="@+id/settings_name"
            app:layout_constraintEnd_toEndOf="@+id/settings_name" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/textView2" android:layout_marginBottom="8sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="176sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:id="@+id/settings_number"
            android:layout_marginTop="8sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" android:layout_marginEnd="8sp"
            app:layout_constraintEnd_toEndOf="@+id/settings_name" app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Domain:"
            app:layout_constraintStart_toStartOf="@+id/settings_number"
            app:layout_constraintEnd_toEndOf="@+id/settings_number" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8sp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8sp" app:layout_constraintTop_toBottomOf="@+id/settings_number"
            app:layout_constraintVertical_bias="0.004" android:id="@+id/textView4"/>

    <TextView
            android:layout_width="240sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/settings_domain"
            android:gravity="center"
            android:layout_marginEnd="8sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.296"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="SIP-ID:"
            app:layout_constraintStart_toStartOf="@+id/settings_number"
            app:layout_constraintEnd_toEndOf="@+id/settings_number" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8sp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8sp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintVertical_bias="0.012"
            android:id="@+id/textView3"/>

    <TextView
            android:layout_width="240sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/settings_sipID"
            android:gravity="center"
            android:layout_marginEnd="8sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintTop_toTopOf="@+id/textView3" app:layout_constraintBottom_toBottomOf="@+id/textView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Password:"
            app:layout_constraintStart_toStartOf="@+id/settings_number"
            app:layout_constraintEnd_toEndOf="@+id/settings_number" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="12sp"
            android:layout_marginBottom="8sp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/textView5"/>

    <TextView
            android:layout_width="240sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/settings_password"
            android:gravity="center"
            android:layout_marginEnd="52sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/textView5" app:layout_constraintTop_toTopOf="@+id/textView5"/>


    <TextView
            android:layout_width="380sp"
            android:layout_height="337sp"
            android:id="@+id/settings_description"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/settings_password" app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintVertical_bias="0.851"/>
    <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/settings_description" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:textSize="20sp" android:textColor="@android:color/black" app:layout_constraintVertical_bias="1.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>